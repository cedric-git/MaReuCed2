<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fragment_meeting_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="11dp"
    android:background="#2C4CAF50"
    android:orientation="vertical"
    android:padding="10dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/nameInput"
            android:layout_width="139dp"
            android:layout_height="wrap_content"

            android:ems="10"
            android:text="Name"
            android:textSize="18sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="10dp"
            android:layout_weight="0"
            app:srcCompat="@drawable/ic_date_time_24dp" />

        <TextView
            android:id="@+id/hourInput"
            android:layout_width="76dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:text="Hour" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="18dp"
            android:layout_height="match_parent"
            android:layout_marginRight="10dp"
            android:layout_weight="0"
            app:srcCompat="@drawable/ic_venue_24dp" />

        <TextView
            android:id="@+id/placeInput"
            android:layout_width="92dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:text="Place" />

        <ImageButton
            android:id="@+id/item_list_delete_button"
            android:layout_width="27dp"
            android:layout_height="match_parent"
            android:layout_weight="0

"
            android:background="@null"
            android:backgroundTint="#FFFFFF"
            app:srcCompat="@drawable/ic_delete_24dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">


    </LinearLayout>

    <LinearLayout
        android:layout_width="212dp"
        android:layout_height="19dp"
        android:layout_marginTop="8dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button_show_hide_participants"
            android:layout_width="134dp"
            android:layout_height="match_parent"

            android:background="#3200BCD4"
            android:drawableLeft="@android:drawable/ic_menu_view"

            android:text="Participants"
            android:textSize="12dp"
            android:textStyle="bold"
            android:typeface="sans"
            app:srcCompat="@android:drawable/ic_menu_view" />


    </LinearLayout>

    <TextView
        android:id="@+id/participants_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="TextView"
        android:layout_marginTop="8dp"
        android:visibility="gone" />


</LinearLayout>

